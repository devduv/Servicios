<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke
                android:color="@color/color_button_green" />
            <gradient android:angle="-90"
                android:startColor="@color/color_button_green"
                android:endColor="@color/color_button_green"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke
                android:color="@color/color_button_green" />
            <solid android:color="@color/color_button_green"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke
                android:color="@color/color_button_green" />
            <gradient android:angle="-90"
                android:startColor="@color/color_button_green"
                android:endColor="@color/color_button_green" />
        </shape>
    </item>
</selector>