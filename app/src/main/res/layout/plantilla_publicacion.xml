<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_pub"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="15dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user"
                android:layout_width="50dp"
                android:layout_marginStart="5dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@color/color_comedor_buttons"/>
            <LinearLayout
                android:id="@+id/linearpub"
                android:layout_toEndOf="@id/image_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/name_user"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/color_text"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp"
                        android:text="Brandon Duvan Saenz Falcón"
                        tools:ignore="SmallSp"/>
                    <TextView
                        android:id="@+id/fac_user"
                        android:text="Ingeniería de Sistemas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/color_text"
                        android:fontFamily="sans-serif"
                        android:textSize="12sp"
                        tools:ignore="SmallSp"/>
                    <TextView
                        android:id="@+id/fecha_pub"
                        android:text="domingo 24 de agosto de 2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/color_hints"
                        android:fontFamily="sans-serif"
                        android:textSize="11sp"
                        tools:ignore="SmallSp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/button_add"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Agregar amigo"
                    android:textAllCaps="false"
                    android:textColor="@color/color_background"
                    android:backgroundTint="@color/color_button_add"
                    android:textSize="11sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:layout_below="@id/linearpub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Bienvenida a esta nueva aplicación"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:id="@+id/tit_new_pub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_text"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_margin="2dp"
                    android:id="@+id/descripcion_pub"
                    android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit curae, vivamus ullamcorper tortor aliquam eros aliquet feugiat, dictumst netus vulputate cursus nulla torquent odio."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp" />



                <ImageView
                    android:id="@+id/image_pub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_comedor_buttons"/>

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>