<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitiesUsers.PoliticasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
    <RelativeLayout
        android:id="@+id/back_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/btnback"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"

            android:tint="@color/color_background"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_gravity="top"
            android:id = "@+id/text_r_titulo"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Términos y condiciones"
            android:textSize="20sp"
            android:textColor="@color/color_background"
            android:padding="5dp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_resumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text"
                android:textSize="18sp"
                android:text="Condiciones de uso"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/cond"
                android:layout_below="@id/titulo_resumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text"
                android:textSize="18sp"
                android:text="Política de privacidad"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/politica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text"
                android:textSize="18sp"
                android:text="Datos que el usuario proporciona"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/datosusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text"
                android:textSize="18sp"
                android:text="Datos de la cuenta"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/datocuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>