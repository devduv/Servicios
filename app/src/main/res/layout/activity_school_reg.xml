<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_background"
    android:orientation="vertical"
    tools:context=".Activities.ProfessionalSchoolActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:id="@+id/back_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:background="@color/color_background"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/btnback"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="48dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:text="Registrar Escuela Profesional"
                android:textColor="@color/color_toolbar"
                android:padding="5dp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id = "@+id/title_facultad"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/color_text"/>

            <ImageView
                android:layout_below="@id/title_facultad"
                android:id="@+id/img_esc"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>



            <android.support.constraint.ConstraintLayout
                android:id="@+id/consta2"
                android:layout_below="@id/img_esc"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewEscuelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/btn_reg_esc"
                android:layout_below="@id/consta2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_radius"
                android:backgroundTint="@color/color_button_green"
                android:textAllCaps="false"
                android:text="Registrar Escuela"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="bottom"
                android:textColor="@color/color_background"
                />

            <Button
                android:id="@+id/btn_found_fac"
                android:layout_below="@id/btn_reg_esc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@null"
                android:textAllCaps="false"
                android:text="No es mi facultad"
                android:textSize="14sp"
                android:layout_gravity="bottom"
                android:textColor="@color/color_toolbar"
                />
        </RelativeLayout>

    </ScrollView>


</LinearLayout>