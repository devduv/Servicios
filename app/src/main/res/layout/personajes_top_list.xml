<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rela"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/puesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif"
                android:textSize="17sp"/>
            <ImageView
                android:layout_toEndOf="@id/puesto"
                android:layout_below="@id/name_personaje"
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"/>
            <TextView
                android:id="@+id/name_personaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/puesto"/>

            <TextView
                android:id="@+id/titulo_fecha_nac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/color_text"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_below="@id/name_personaje"
                android:text="Fecha de nacimiento"/>

            <TextView
                android:id="@+id/fecha_nac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color_text"
                android:textSize="13sp"
                android:layout_below="@id/titulo_fecha_nac"/>

            <TextView
                android:id="@+id/titulo_ciudad_natal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:layout_marginBottom="2dp"
                android:textColor="@color/color_text"
                android:textSize="13sp"
                android:layout_below="@id/fecha_nac"
                android:textStyle="bold"
                android:text="Ciudad"/>

            <TextView
                android:id="@+id/ciudad_natal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:layout_marginBottom="5dp"
                android:textColor="@color/color_text"
                android:textSize="13sp"
                android:layout_below="@id/titulo_ciudad_natal"/>

            <TextView
                android:id="@+id/titulo_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/puesto"
                android:layout_marginStart="5dp"
                android:textColor="@color/color_text"
                android:textSize="13sp"
                android:layout_below="@id/image"
                android:textStyle="bold"
                android:text="Descripción"/>
            <TextView
                android:id="@+id/desc_personaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/color_text"
                android:textSize="13sp"
                android:layout_below="@id/titulo_desc"
                android:layout_toEndOf="@id/puesto"/>

            <Button
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/button_vernoticia"
                android:drawableStart="@android:drawable/arrow_down_float"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:layout_below="@id/ciudad_natal"
                android:layout_toEndOf="@id/image"
                android:text="Más información"
                android:textAllCaps="false"
                android:background="@null"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>