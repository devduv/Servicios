<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".ActivitiesUsers.RegisterEscuelaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/back_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="top"
                android:background="@color/colorPrimary"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/btnback"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"

                    android:tint="@color/color_background"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:text="Registro de datos"
                    android:textColor="@color/color_background"
                    android:padding="5dp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>


            <TextView
                android:id = "@+id/title_facultad"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/color_text"/>

            <ImageView
                android:id="@+id/img_esc"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>



            <android.support.constraint.ConstraintLayout
                android:id="@+id/consta2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewEscuelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_reg_esc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:textAllCaps="false"
        android:text="Registrar Escuela"
        android:textSize="16sp"
        android:layout_gravity="bottom"
        android:textColor="@color/color_background"
        />

</FrameLayout>