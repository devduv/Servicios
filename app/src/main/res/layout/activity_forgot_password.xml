<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".ActivitiesUsers.ForgotPasswordActivity"
    android:orientation="vertical">

  <RelativeLayout
      android:id="@+id/back_login"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_gravity="top"
      android:background="@color/colorPrimary"
      tools:ignore="MissingConstraints">
    <ImageView
        android:id="@+id/btnback"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"

        android:tint="@color/color_background"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:text="Olvidé mi contraseña"
        android:textColor="@color/color_background"
        android:padding="5dp"
        tools:ignore="HardcodedText" />
  </RelativeLayout>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

      <ImageView
          android:id = "@+id/icon_login_sm"
          android:layout_width="wrap_content"
          android:layout_height="150dp"
          android:layout_marginTop="40dp"
          android:background="@color/color_background"
          android:src="@drawable/icon_logo_sm"
          android:contentDescription="@string/logo_de_sm" />
      <TextView
          android:id = "@+id/text_r_titulo"
          android:layout_width="wrap_content"
          android:layout_gravity="center"
          android:layout_height="wrap_content"
          android:text="Recuperar Contraseña"
          android:textSize="24sp"
          android:fontFamily="sans-serif-condensed"
          android:textColor="@color/color_text"
          tools:ignore="HardcodedText" />

        <EditText
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:id="@+id/email_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            android:importantForAutofill="no"
            tools:targetApi="o"/>

      <Button
          android:id="@+id/email_forgot_button"
          android:layout_width="match_parent"
          android:layout_gravity="center"
          android:layout_height="wrap_content"
          android:layout_margin="25dp"
          android:text="Restablecer contraseña"
          android:textColor="@color/color_background"
          android:backgroundTint="@color/colorPrimaryDark"
          android:textSize="17sp"
          android:textAllCaps="false"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Se le enviará un correo electrónico de restablecimiento de contraseña."
          android:layout_marginStart="30dp"
          android:layout_marginEnd="30dp"
          android:textSize="12sp"
          android:textColor="@color/colorPrimaryDark"
          android:gravity="center"
          tools:ignore="HardcodedText" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>