<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.NoticiaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_sm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_logo_sm"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Universidad"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_sm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noticias"
                android:textSize="12sp"
                android:layout_below="@id/titulo"
                android:layout_toRightOf="@id/img_sm"
                android:layout_marginStart="5dp"/>

            <LinearLayout
                android:layout_below="@id/img_sm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tit_new_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/color_text"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:id="@+id/image_new_selected"
                    android:layout_width="match_parent"
                    android:layout_height="195dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:id="@+id/img_calender_selected"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/fecha_new_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textSize="12sp"/>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/desc_new_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/color_text"
                        android:textSize="17sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        tools:ignore="SmallSp" />


                    <TextView
                        android:id="@+id/desc_new_02"
                        android:layout_below="@id/desc_new_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/color_text"
                        android:textSize="17sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        tools:ignore="SmallSp" />

                    <View
                        android:id="@+id/view_desc_02"
                        android:layout_below="@id/desc_new_02"
                        android:layout_width="match_parent"
                        android:background="@android:color/darker_gray"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"/>

                    <TextView
                        android:id="@+id/desc_new_03"
                        android:layout_below="@id/view_desc_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_text"
                        android:textSize="17sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        tools:ignore="SmallSp" />

                    <View
                        android:id="@+id/view_desc_03"
                        android:layout_below="@id/desc_new_03"
                        android:layout_width="match_parent"
                        android:background="@android:color/darker_gray"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"/>

                    <TextView
                        android:id="@+id/desc_new_04"
                        android:layout_below="@id/view_desc_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_text"
                        android:textSize="17sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        tools:ignore="SmallSp" />

                    <View
                        android:id="@+id/view_desc_04"
                        android:layout_below="@id/desc_new_04"
                        android:layout_width="match_parent"
                        android:background="@android:color/darker_gray"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"/>

                    <TextView
                        android:id="@+id/desc_new_05"
                        android:layout_below="@id/view_desc_04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_text"
                        android:textSize="17sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        tools:ignore="SmallSp"/>

                    <View
                        android:id="@+id/view_desc_05"
                        android:layout_below="@id/desc_new_05"
                        android:layout_width="match_parent"
                        android:background="@android:color/darker_gray"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"/>


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>