<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".ActivitiesUsers.NicknameActivity">

    <RelativeLayout
        android:id="@+id/back_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/btnback"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"

            android:tint="@color/color_background"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:text="Crea tu nickname"
            android:textColor="@color/color_background"
            android:padding="5dp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/icnickname"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id = "@+id/text_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_text"
                    android:padding="10dp"
                    android:text= "Crea un nombre de usuario o apodo que más te guste con el cual te conocerán."
                    tools:ignore="HardcodedText" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_nickname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:counterEnabled = "true"
                    app:counterMaxLength = "10"
                    app:errorEnabled="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="35dp"
                    >

                    <EditText
                        android:id="@+id/nickname_ver_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textSize = "14sp"
                        android:singleLine="true"
                        android:importantForAutofill="no" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id = "@+id/id_photo_useer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/color_text"
                    android:padding="10dp"
                    android:contentDescription="Pick photo"
                    android:text= "Escoge una foto de perfil"
                    android:gravity="center"
                    />

                <ImageView
                    android:id="@+id/img_selected"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <GridLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <ImageButton
                        android:id = "@+id/btn_num_0"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <ImageButton
                        android:id = "@+id/btn_num_1"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <ImageButton
                        android:id = "@+id/btn_num_2"
                        android:backgroundTint="@android:color/holo_red_light"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <ImageButton
                        android:id = "@+id/btn_num_3"
                        android:backgroundTint="@android:color/holo_orange_dark"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>


                    <ImageButton
                        android:id = "@+id/btn_num_4"
                        android:backgroundTint="@android:color/holo_purple"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <ImageButton
                        android:id = "@+id/btn_num_5"
                        android:text="0"
                        android:backgroundTint="@android:color/holo_blue_bright"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <ImageButton
                        android:id = "@+id/btn_num_6"
                        android:backgroundTint="@color/color_brown"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />


                    <ImageButton
                        android:id = "@+id/btn_num_7"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <ImageButton
                        android:id = "@+id/btn_num_8"
                        android:text="0"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                </GridLayout>

                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:id = "@+id/btn_g_d"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="Crear Nickname"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/holo_red_light"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/color_background"
                    android:textSize="19sp"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    app:spinning_bar_width="4dp" />
            </LinearLayout>
        </ScrollView>



</LinearLayout>